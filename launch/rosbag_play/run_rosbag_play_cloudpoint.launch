<launch>
  <!--
    HOW TO RUN THIS LAUNCH FILE:
    $ cd ~/bag_files/
    $ roslaunch $(code_in_test) run_rosbag_play.launch filenames:=$(pwd)/log_<name of the log file>.bag
  -->

    <arg name="directory_rosbag" value="/home/paulo/catkin_ws/bagfiles"/>
  <arg name="filenames"/>
  <arg name="rate" default="1.0"/>
  <arg name="start" default="0.0"/>

  <!--param name="/use_sim_time" value="true"/-->

 
    <node pkg="rosbag" type="play" name="rosbag_play" output="screen"
      args="--clock 
            --start $(arg start) 
            --rate $(arg rate) 
            $(arg directory_rosbag)/$(arg filenames)"/>

   
</launch>